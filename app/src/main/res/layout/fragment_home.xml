<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDDDD"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <ImageView
            android:id="@+id/btnMenuSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_select" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/home_page"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/btnSearchBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_search" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:paddingStart="@dimen/_28sdp"
                    android:paddingEnd="@dimen/_28sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp">

                <androidx.cardview.widget.CardView
                    style="@style/ServiceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    app:cardCornerRadius="@dimen/_16sdp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_16sdp"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/supportActionContainer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_64sdp"
                            android:baselineAligned="false"
                            android:fillViewport="true"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <RelativeLayout
                                android:id="@+id/btnGames"
                                style="@style/ServiceContainer.Action.Container"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    style="@style/ServiceLinearContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="top"
                                    tools:ignore="UseCompoundDrawables">

                                    <ImageView
                                        style="@style/SupportImage"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:contentDescription="@string/games"
                                        android:src="@drawable/ic_games" />

                                    <TextView
                                        style="@style/ServiceTitle"
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:text="@string/games"
                                        android:textColor="#484848"
                                        tools:text="@string/games" />

                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/btnTvShows"
                                style="@style/ServiceContainer.Action.Container"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    style="@style/ServiceLinearContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="top"
                                    tools:ignore="UseCompoundDrawables">

                                    <ImageView
                                        style="@style/SupportImage"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:contentDescription="@string/cv"
                                        android:src="@drawable/ic_tv" />

                                    <TextView
                                        style="@style/ServiceTitle"
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:text="@string/tv_film"
                                        android:textColor="#484848"
                                        tools:text="TV &amp; Phim" />

                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/btnMessage"
                                style="@style/ServiceContainer.Action.Container"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    style="@style/ServiceLinearContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="top"
                                    tools:ignore="UseCompoundDrawables">

                                    <ImageView
                                        style="@style/SupportImage"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:contentDescription="@string/message"
                                        android:src="@drawable/ic_chat" />

                                    <TextView
                                        style="@style/ServiceTitle"
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:text="@string/message"
                                        android:textColor="#484848"
                                        tools:text="@string/message" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_64sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:baselineAligned="false"
                            android:fillViewport="true"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <RelativeLayout
                                android:id="@+id/btnNews"
                                style="@style/ServiceContainer.Action.Container"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    style="@style/ServiceLinearContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="top"
                                    tools:ignore="UseCompoundDrawables">

                                    <ImageView
                                        style="@style/SupportImage"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:contentDescription="@string/news"
                                        android:src="@drawable/ic_news" />

                                    <TextView
                                        style="@style/ServiceTitle"
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:maxLines="2"
                                        android:singleLine="false"
                                        android:text="@string/news"
                                        android:textColor="#484848"
                                        tools:text="@string/news" />

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/btnForeignLanguages"
                                style="@style/ServiceContainer.Action.Container"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    style="@style/ServiceLinearContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="top"
                                    tools:ignore="UseCompoundDrawables">

                                    <ImageView
                                        style="@style/SupportImage"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:contentDescription="@string/foreign_language"
                                        android:src="@drawable/ic_foreign_language" />

                                    <TextView
                                        style="@style/ServiceTitle"
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:maxLines="2"
                                        android:singleLine="false"
                                        android:text="@string/foreign_language"
                                        android:textColor="#484848"
                                        tools:text="@string/foreign_language" />
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/btnLocations"
                                style="@style/ServiceContainer.Action.Container"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    style="@style/ServiceLinearContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="top"
                                    tools:ignore="UseCompoundDrawables">

                                    <ImageView
                                        style="@style/SupportImage"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:contentDescription="@string/location"
                                        android:src="@drawable/ic_location" />

                                    <TextView
                                        style="@style/ServiceTitle"
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:maxLines="2"
                                        android:singleLine="false"
                                        android:text="@string/location"
                                        android:textColor="#484848"
                                        tools:text="@string/location" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/featured_news"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:padding="8dp"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvNews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00BFA5"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_featured_news" />
                </RelativeLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/featured_games"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:padding="8dp"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvGames"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00BFA5"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_featured_games" />
                </RelativeLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp">

                <TextView
                    android:id="@+id/titleListFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_friends"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toStartOf="@id/tvStatusMode"
                    android:src="@drawable/ic_select_option" />

                <TextView
                    android:id="@+id/tvStatusMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="{Đang hoạt động}"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="" />
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>